@{
  Layout = "_Layout";
}
@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

<h1>Restaurant Types</h1>

@if (@Model.Count == 0)
{
  <h2>There are no restaurants added for viewing in list.</h2>
}
<ul>
  @foreach(Restaurant restaurant in Model)
  {
      <li>@Html.ActionLink($"{restaurant.CuisineType}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.FoodCuisine.FoodCuisineName</li> 
  }
</ul>

<p>@Html.ActionLink("Add new Restaurant", "Create", "Restaurants")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>



